extends ../layout
block content
  br
  .container-fluid
    .row.justify-content-center
      .col-sm-12.col-md-6.col-lg-6
        .card
          .card-header กรุณากรอกข้อมูลให้ครบถ้วน
          .card-body
            form(action="/user/register" method="post")
              .form-row
                .col
                  label(for="firstname") ชื่อ
                  input.form-control#firstname(type="text" name="firstname")
                .col
                  label(for="lastname") นามสกุล
                  input.form-control#lastname(type="text" name="lastname")
              .form-group
                i.material-icons account_circle 
                label(for="username") &nbsp Username
                input.form-control#username(type="text" name="username")
              .form-group
                i.material-icons lock 
                label(for="password") &nbsp Password
                input.form-control#password(type="text" name="password")
              .form-group
                i.material-icons email 
                label(for="email") &nbsp อีเมล์
                input.form-control#email(type="text" name="email")
              .form-group
                i.material-icons.socicon-facebook 
                label(for="facebook") &nbsp ชื่อโปรไฟล์ของ Facebook
                input.form-control#facebook(type="text" name="facebook")
              .form-group
                i.material-icons.socicon-line 
                label(for="line") &nbsp Line ID
                input.form-control#line(type="text" name="line")
              .form-group
                i.materail-icons.socicon-instagram
                label(for="instagram") &nbsp Instagram
                input.form-control#instagram(type="text" name="instagram")
              input.btn.btn-primary.float-right(type="submit" value="สมัครเป็นตัวแทน")
